# ============================================
# AI Assistant Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# REQUIRED: Authentication & Security
# ============================================

# JWT Secret Key (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# JWT Token Expiration (hours)
JWT_EXPIRATION_HOURS=24

# Environment: development, staging, production
ENVIRONMENT=development

# ============================================
# REQUIRED: AI Model API Keys
# ============================================

# Google Gemini API Key
# Get from: https://ai.google.dev/
GEMINI_API_KEY=
GOOGLE_AI_API_KEY=

# OpenRouter API Key (for DeepSeek, GPT-4, etc.)
# Get from: https://openrouter.ai/
OPENROUTER_API_KEY=

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API Key
# Get from: https://platform.openai.com/
OPENAI_API_KEY=

# xAI Grok API Key (Optional)
# Get from: https://x.ai/
GROK_API_KEY=

# ============================================
# OPTIONAL: Database Configuration
# ============================================

# SQLite Database Path (default: ./data/history.db)
DATABASE_PATH=./data/history.db

# PostgreSQL Database URL (if using PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ============================================
# OPTIONAL: Server Configuration
# ============================================

# Server Host (default: 0.0.0.0)
HOST=0.0.0.0

# Server Port (default: 8000)
PORT=8000

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# OPTIONAL: Communication Integrations
# ============================================

# Telegram Bot (for notifications)
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_CHAT_ID=your-chat-id
