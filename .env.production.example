# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================

# Environment
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000

# ===========================================
# Security & Authentication
# ===========================================

# CRITICAL: Generate a secure key with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=MUST_BE_CHANGED_IN_PRODUCTION

# JWT Configuration
JWT_EXPIRATION_HOURS=24
JWT_ALGORITHM=HS256

# ===========================================
# Database Configuration
# ===========================================

# For SQLite (default)
DATABASE_PATH=./data/production.db

# For PostgreSQL (REQUIRED for production)
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# CSRF Protection
CSRF_SECRET=GENERATE_WITH_openssl_rand_hex_32
CSRF_MAX_AGE=86400

# ===========================================
# AI Model API Keys
# ===========================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key

# xAI Grok
GROK_API_KEY=your-grok-api-key

# OpenRouter (for DeepSeek, etc.)
OPENROUTER_API_KEY=your-openrouter-api-key

# ===========================================
# Frontend Configuration
# ===========================================

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://www.your-domain.com

# ===========================================
# External Services
# ===========================================

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Redis (for caching/rate limiting)
REDIS_URL=redis://default:password@host:port

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# OAuth Providers (optional)
# ===========================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# Monitoring & Analytics
# ===========================================

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# ===========================================
# Rate Limiting
# ===========================================

# Requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# Requests per hour per user
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# File Storage (optional)
# ===========================================

# AWS S3 / MinIO
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1

# ===========================================
# Email Service (optional)
# ===========================================

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@your-domain.com

# ===========================================
# Telegram Notifications (optional)
# ===========================================

TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id